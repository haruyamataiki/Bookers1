<h1>Books</h1>
<div class="books-impressions">
<table>
	<thead>
	 	<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>
	<% @books.each do |book|%>
	<tbody>
		
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show",book_path(book) %></td>
			<td><%= link_to "Edit",edit_book_path(book) %></td>
			<td><%= link_to "destroy",book_path(book),method: :delete, "data-confirm" => "Are you sure ï¼Ÿ" %></td>
		</tr>
		
	</tbody>
	<% end %>
</table>
</div>

<h2>New book</h2>

<% if @book.errors.any? %>
    <% @book.errors.full_messages.each do |message| %>
        <%= message %>
    <% end %>
<% end %>
<p id="notice"><%=  notice %></p>

<%= form_for(@book) do |f| %>

    
 
    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>body</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'Create Book' %>
 
<% end %>

